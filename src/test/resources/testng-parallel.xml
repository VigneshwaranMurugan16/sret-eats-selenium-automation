<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelTestSuite" parallel="tests" thread-count="3" verbose="1">

    <!-- Add Extent Report Listener -->
    <listeners>
        <listener class-name="base.ExtentTestListener"/>
    </listeners>

    <!-- Chrome Browser Tests -->
    <test name="Chrome Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.HomePageTest"/>
            <class name="tests.OrderFlowTest"/>
        </classes>
    </test>

    <!-- Edge Browser Tests -->
    <test name="Edge Tests" preserve-order="true">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test>

    <!-- Firefox Browser Tests (Optional) -->
    <!--
    <test name="Firefox Tests" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test>
    -->

</suite>
